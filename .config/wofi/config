#key_pgdn=KEY              # кнопка перехода на одну страницу вниз
key_expand=Tab             # кнопка раскрытия выбора (например, для выбора нескольких файлов)
#key_hide_search=KEY       # кнопка скрытия панели поиска

# ДОПОЛНИТЕЛЬНЫЕ ПАРАМЕТРЫ
always_parse_args=true      # включает/выключает обработку аргументов командной строки
show_all=true               # включает/выключает отображение всех результатов, даже если они не соответствуют поисковому запросу
print_command=true          # включает/выключает вывод команды в терминал перед ее выполнением
#display_generic=false      # включает/выключает отображение общего имени приложения вместо его имени, указанного в .desktop файле

