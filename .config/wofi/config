# ОСНОВНЫЕ ПАРАМЕТРЫ
show=drun
mode=drun                  # режим работы: drun, run, dmenu (способ поиска исполняемых файлов)
#prompt=                   # надпись в строке поиска
#term=kitty                # терминал по умолчанию

# РАЗМЕРЫ И ПОЛОЖЕНИЕ
