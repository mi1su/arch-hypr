#orientation=vertical      # ориентация: horizontal или vertical

# ПОИСК И СОРТИРОВКА
insensitive=false          # включает/выключает поиск без учета регистра
matching=contains          # режим сопоставления: contains или fuzzy
sort_order=alphabetical    # порядок сортировки: default или alphabetical (по алфавиту)
#filter_rate=RATE          # скорость обновления результатов в миллисекундах
#exec_search=true          # поиск по двум энтерам
#dynamic_lines=true        # сокращение под результаты

# ВНЕШНИЙ ВИД
gtk_dark=true              # включает темный вариант темы, если такая есть
#hide_scroll=true          # скрыть полосу прокрутки
#no_actions=true           # скрыть подменю
#hide_search=false         # скрывать панель поиска
#allow_markup=true         # включает/выключает поддержку разметки Pango
allow_images=true          # включает/выключает отображение изображений
image_size=24              # размер иконок

# ОТОБРАЖЕНИЕ РЕЗУЛЬТАТОВ
#columns=2                 # количество колонок
